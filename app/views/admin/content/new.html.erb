<% @page_heading = _('New article') %>

<%= render "admin/shared/edit", { :form_type => "article", :form_action => { :action => "new", :id => @article.id , :class => ('autosave')} } %>

<% if current_user.admin? %>
  <h3> Merge Articles </h3>
  <%= form_tag({:controller => "admin/content", :action => "merge", :id => @article.id}, :method => "put", :enctype => "multipart/form-data", :class => 'article') do %>
    <%= label_tag(:merge_with, "Article ID ") %>
    <%= text_field_tag(:merge_with) %>
     </br>
    <%= submit_tag("Merge") %>
  <% end %>
<% end %>